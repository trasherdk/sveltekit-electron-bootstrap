{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "../../build/app",
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "tslib": [
        "../../node_modules/tslib/tslib.d.ts"
      ]
    }
  }
}